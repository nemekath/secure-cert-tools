# Secure Cert-Tools Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# DEPLOYMENT MODE
# =============================================================================
# Set to 'development' for Flask dev server or 'production' for Gunicorn
FLASK_ENV=production

# Debug mode (only for development - NEVER enable in production)
DEBUG=false

# =============================================================================
# CERTIFICATE CONFIGURATION
# =============================================================================
# Domain name for SSL certificates
CERT_DOMAIN=localhost

# Certificate file paths (if using custom certificates)
# CERTFILE=./certs/server.crt
# KEYFILE=./certs/server.key

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port and host
PORT=5555
HOST=0.0.0.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Flask secret key (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-secret-key-here-change-this-in-production

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Secure Cert-Tools
APP_VERSION=2.4.0

# Python optimization
PYTHONUNBUFFERED=1

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =============================================================================
# Uncomment these for development mode:
# FLASK_ENV=development
# DEBUG=true
